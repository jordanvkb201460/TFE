{% extends "base.html.twig" %}
{% block title %}Experiences{% endblock %}
{% block body %}

<div class = "list-group" style="padding : 1em">
{% for experience in experiences %}

{% if experience.isActive == true %}
<a href="{{path('displayExperience', {'id' : experience.token}) }}" class="list-group-item list-group-item-action" data-toggle="dropdown"> {{ experience.name }} <span class="badge badge-primary badge-pill" style = "float:right"></span></a>
{% elseif experience.isActive == false %}
<a href="{{path('displayExperience', {'id' : experience.token}) }}" class="list-group-item  table-dark" data-toggle="dropdown"> {{ experience.name }} <span class="badge badge-primary badge-pill" style = "float:right">cloturée</span></a>
{% endif %}
{% endfor %}
<footer style="padding : 5em 0 0 0" >
<a class="btn btn-primary" href = "{{ path('createExp',{'id' : app.user.token, 'method' : 'create', 'check' : '1'}) }}">Créer une expérience</a>
</footer>
{% endblock %}